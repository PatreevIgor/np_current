<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
  <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price, :step => 0.01 %>
  </div>

    <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :types %><br>
    <%= f.text_field :types %>
  </div>

   <div class="field">
      Pakings<br>
      <%= collection_check_boxes(:product, :packing_ids, @packings, :id, :title) %>
  </div>

  <div class="field">
      Candies<br>
          <% @candies.each do |candy| %> 
            <%= candy.title %> 
            <%= check_box_tag "check_box[#{candy.id}]" %> 
            <%= text_field_tag "count[#{candy.id}]" %> 
          <% end %> 
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>